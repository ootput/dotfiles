nnoremap j 3j
nnoremap J <C-d>
nnoremap k 3k
nnoremap K <C-u>

" Options
set activate=homepage,tabopen,quickmark,paste
:set! browser.urlbar.clickSelectsAll=false
:set! browser.urlbar.doubleClickSelectsAll=true
set complete=l
set defsearch=google
set editor=gvim
set focuscontent
set hintchars=asdfghjkl;
set hinttags="//*[@onclick or @onmouseover or @onmousedown or @onmouseup or @oncommand or @class='lk' or @role='link' or @role='button' or @role='option'] | //input[not(@type='hidden')] | //a | //area | //iframe | //textarea | //button | //select | //xhtml:input[not(@type='hidden')] | //xhtml:a | //xhtml:area | //xhtml:iframe | //xhtml:textarea | //xhtml:button | //xhtml:select"
set history=50
set hlsearch
set ignorecase
set incsearch
set newtab=all
set popups=tab,resized
set smartcase
set titlestring="Firefox"
set toolbars=noaddons,bookmarks,menu,tabs
set verbose=1

map ,d <ESC>:dsearch -query
map ,q <ESC>:q<CR>
map ,w <ESC>:w<CR>
map ,Q <ESC>:qall!<CR>

cabbrev yt http://www.youtube.com
cabbrev gt http://github.com/ootput/dotfiles
cabbrev ogi http://ootput.github.io
cabbrev fdn http://forums.debian.net
cabbrev opt http://memberservices.optusnet.com.au/myusage
cabbrev rd http://reddit.com

